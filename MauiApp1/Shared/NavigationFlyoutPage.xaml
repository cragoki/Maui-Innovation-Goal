<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Shared.NavigationFlyoutPage"
             Title="NavigationFlyoutPage"
             FlyoutLayoutBehavior="Split">
    <FlyoutPage.Flyout>
        <ContentPage Title="My App">
            <VerticalStackLayout>
                <Label Text="Flyout" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="20"></Label>
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage BackgroundColor="DarkRed">
                    <VerticalStackLayout>
                        <Label Text="Detail" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="20"></Label>
                    </VerticalStackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>